<?xml version="1.0" ?>
<robot name="3dof_robot">

 

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.15" length="0.1"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Base joint (continuous joint) -->
  <joint name="base_joint" type="continuous">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0.0 0.0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Link 1 -->
  <link name="link_1">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="green">
        <color rgba="0 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 2 (revolute) -->
  <joint name="joint_2" type="revolute">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Link 2 -->
  <link name="link_2">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Joint 3 (revolute) -->
  <joint name="joint_3" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.35" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Link 3 -->
  <link name="link_3">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.2"/>
      </geometry>
      <material name="yellow">
        <color rgba="1 1 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Finger 1 -->
  <link name="finger_1">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.1"/>
      </geometry>
      <material name="orange">
        <color rgba="1 0.5 0 1"/>
      </material>
    </visual>
  </link>

  <!-- Finger 2 -->
  <link name="finger_2">
    <visual>
      <geometry>
        <cylinder radius="0.01" length="0.1"/>
      </geometry>
      <material name="purple">
        <color rgba="0.5 0 1 1"/>
      </material>
    </visual>
  </link>

  <!-- Prismatic joint for Finger 1 -->
  <joint name="finger_joint_1" type="prismatic">
    <parent link="link_3"/>
    <child link="finger_1"/>
    <origin xyz="-0.03 0.0 0.15" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="0.02" effort="5" velocity="0.1"/>
  </joint>

  <!-- Prismatic joint for Finger 2 -->
  <joint name="finger_joint_2" type="prismatic">
    <parent link="link_3"/>
    <child link="finger_2"/>
    <origin xyz="0.03 0.0 0.15" rpy="0 0 0"/>
    <axis xyz="-1 0 0"/>
    <limit lower="0" upper="0.02" effort="5" velocity="0.1"/>
  </joint>

</robot>